{
  "globals": {
    "ts-jest": {
      "diagnostics": {
        "warnOnly": true
      }
    }
  },

  "testEnvironment": "node",

  "preset": "ts-jest",
  "testMatch": ["**/*.test.{js,jsx,ts,tsx}"],
  "roots": ["<rootDir>/src/", "<rootDir>/tests/"],

  "clearMocks": true,

  "collectCoverageFrom": ["src/**/*.{ts,tsx,js,jsx}"],
  "coverageReporters": ["text-summary", "html"],
  "coverageDirectory": "coverage",
  "coverageThreshold": {
    "global": {
      "branches": 75,
      "functions": 75,
      "lines": 75,
      "statements": 75
    }
  }
}
